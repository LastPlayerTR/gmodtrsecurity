<html lang="tr" class="">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>Discord Hesabını Yönet</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"
        integrity="sha512-bZS47S7sPOxkjU/4Bt0zrhEtWx0y0CRkhEp8IckzK+ltifIIE9EMIMTuT/mEzoIMewUINruDBIR/jJnbguonqQ=="
        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <style>
        body {
            background: url(https://media.giphy.com/media/RkDSu8RODB7hT44m3K/giphy.gif);
            background-size: cover;
            background-position: center
        }

        body:before {
            position: absolute;
            content: '';
            top: 0;
            bottom: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, .72)
        }

        .bg-giris {
            background: rgba(255, 255, 255, .81);
            margin: auto;
            padding: 20px;
            border-radius: 10px
        }

        .swal2-popup {
            width: 55% !important
        }

        .kurallar li {
            font-size: 15px
        }
    </style>

<body class="">

    <div class="container" id="container">
        <div class="row justify-content-center align-items-center" style="height: 100%">
            <div class="col-md-4">
                <div class="bg-giris">
                    <p class="alert alert-primary text-center"> Garry's Mod Türkiye Güvenlik
                    </p>
                    <p class="alert alert-primary text-center">Discord Adı: <code><%= discordname; %></code><br>Discord
                        ID: <code><%= discordid; %></code></p>
                    <p class="alert alert-primary text-center">Steam Adı: <code><%= steamname; %></code><br>SteamID:
                        <code><%= steamid; %></code></p>

                    <button id="startlink" class="btn btn-md btn-block btn-info">Eşleştirmeyi Başlat</button>
                    <a href="/logout" class="btn btn-md btn-block btn-danger">Çıkış Yap</a>
                </div>
            </div>
        </div>
    </div>

    <script>
        $("#startlink").click(function () {
Swal.fire({
  position: 'top-end',
  icon: 'info',
  title: 'Eşleştirme başladı lütfen bekleyin.',
  showConfirmButton: false,
  timer: 700
})
            axios.get('/link')
                .then(function (response) {
                    if(response.data.status != 200){
                        Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: response.data.message
                        })
                        return
                    }
                    Swal.fire({
                        icon: 'success',
                        title: 'Başarılı',
                        text: response.data.message
                    })
                })
                .catch(function (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Sunucu hatası'
                    })
                });
        });
    </script>

</body>

</html>